<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.moditect</groupId>
        <artifactId>moditect-integrationtest-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>moditect-integrationtest-hibernate-validator</artifactId>
    <packaging>jar</packaging>
    <name>ModiTect Integration Test - Hibernate Validator</name>

    <properties>
        <hibernate.validator.version>6.0.0.Beta2</hibernate.validator.version>
        <bean.validation.version>2.0.0.Beta2</bean.validation.version>
        <jboss.logging.version>3.3.0.Final</jboss.logging.version>
        <classmate.version>1.3.1</classmate.version>
        <javax.el.version>3.0.1-b08</javax.el.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>${hibernate.validator.version}</version>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <release>9</release>
                        <compilerArgs>
                            <compilerArg>--module-path</compilerArg>
                            <compilerArg>${project.build.directory}/modules</compilerArg>
                        </compilerArgs>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <configuration>
                    <header>${basedir}/../../etc/license.txt</header>
                </configuration>
            </plugin>
            <plugin>
                <groupId>${project.groupId}</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-hv-module-info</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-module-info</goal>
                        </goals>
                        <configuration>
                            <modules>
                                <module>
                                    <artifact>
                                        <groupId>org.hibernate.validator</groupId>
                                        <artifactId>hibernate-validator</artifactId>
                                        <version>${hibernate.validator.version}</version>
                                    </artifact>
                                    <moduleName>org.hibernate.validator</moduleName>
                                    <exportExcludes>
                                        <exportExclude>org\.hibernate\.validator\.internal.*</exportExclude>
                                    </exportExcludes>
                                    <overrides>
                                        <requires>static jboss.logging.annotations</requires>
                                        <exports>org.hibernate.validator.internal.util.logging to org.jboss.logging</exports>
                                    </overrides>
                                    <addServiceUses>true</addServiceUses>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>javax.validation</groupId>
                                        <artifactId>validation-api</artifactId>
                                        <version>${bean.validation.version}</version>
                                    </artifact>
                                    <moduleName>java.validation</moduleName>
                                    <addServiceUses>true</addServiceUses>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.glassfish</groupId>
                                        <artifactId>javax.el</artifactId>
                                        <version>${javax.el.version}</version>
                                    </artifact>
                                    <moduleName>javax.el</moduleName>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.fasterxml</groupId>
                                        <artifactId>classmate</artifactId>
                                        <version>${classmate.version}</version>
                                    </artifact>
                                    <moduleName>com.fasterxml.classmate</moduleName>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.jboss.logging</groupId>
                                        <artifactId>jboss-logging</artifactId>
                                        <version>${jboss.logging.version}</version>
                                    </artifact>
                                    <moduleName>org.jboss.logging</moduleName>
                                </module>
                            </modules>
                        </configuration>
                    </execution>
                    <execution>
                        <id>add-module-info-to-dependencies</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/modules</outputDirectory>
                            <modules>
                                <module>
                                    <artifact>
                                        <groupId>javax.validation</groupId>
                                        <artifactId>validation-api</artifactId>
                                        <version>${bean.validation.version}</version>
                                    </artifact>
                                    <moduleInfoFile>
                                        ${project.build.directory}/generated-sources/modules/java.validation/module-info.java
                                    </moduleInfoFile>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.glassfish</groupId>
                                        <artifactId>javax.el</artifactId>
                                        <version>${javax.el.version}</version>
                                    </artifact>
                                    <moduleInfoFile>
                                        ${project.build.directory}/generated-sources/modules/javax.el/module-info.java
                                    </moduleInfoFile>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.fasterxml</groupId>
                                        <artifactId>classmate</artifactId>
                                        <version>${classmate.version}</version>
                                    </artifact>
                                    <moduleInfoFile>
                                        ${project.build.directory}/generated-sources/modules/com.fasterxml.classmate/module-info.java
                                    </moduleInfoFile>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.hibernate</groupId>
                                        <artifactId>hibernate-validator</artifactId>
                                        <version>${hibernate.validator.version}</version>
                                    </artifact>
                                    <moduleInfoFile>
                                        ${project.build.directory}/generated-sources/modules/org.hibernate.validator/module-info.java
                                    </moduleInfoFile>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.jboss.logging</groupId>
                                        <artifactId>jboss-logging</artifactId>
                                        <version>${jboss.logging.version}</version>
                                    </artifact>
                                    <moduleInfoSource>
                                        module org.jboss.logging {
                                            requires java.logging;
                                            requires static jboss.logmanager;
                                            requires static log4j;
                                            requires static log4j.api;
                                            requires static slf4j.api;
                                            exports org.jboss.logging;
                                        }
                                    </moduleInfoSource>
                                </module>
                            </modules>
                        </configuration>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>add-module-info-to-test</id>
                        <phase>package</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/modules</outputDirectory>
                            <modules>
                                <module>
                                    <file>${project.build.directory}/${project.artifactId}-${project.version}.jar</file>
                                    <mainClass>com.example.ValidationTest</mainClass>
                                    <moduleInfoSource>
                                        open module com.example {
                                            requires org.hibernate.validator;
                                            exports com.example;
                                        }
                                    </moduleInfoSource>
                                </module>
                            </modules>
                        </configuration>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
